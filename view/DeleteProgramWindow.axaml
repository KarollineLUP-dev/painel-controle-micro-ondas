<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:model="using:painel_controle_micro_ondas.model"
        x:Class="painel_controle_micro_ondas.model.DeleteProgramWindow"
        Title="Deletar Programa de Aquecimento"
        Width="350" Height="400"
        WindowStartupLocation="CenterOwner"
        Background="#2E2E2E"
        Foreground="White">

    <Window.Styles>
        <Style Selector="Button.accent-green">
            <Setter Property="Background" Value="#006400" />
        </Style>
        <Style Selector="Button.accent-red">
            <Setter Property="Background" Value="#8B0000" />
        </Style>
    </Window.Styles>

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Qual programa deseja deletar?" FontSize="16" FontWeight="Bold" />

        <ListBox Name="ProgramsListBox" Height="200" Margin="0,10">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="model:HeatingProgram">
                    <StackPanel Spacing="4">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontStyle="Italic"/>
                        <TextBlock Text="{Binding Food}" FontSize="12" Foreground="LightGray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Name="ErrorTextBlock" TextWrapping="Wrap"/>

         <Grid ColumnDefinitions="*,*,*" RowDefinitions="*" Name="ActionProgramKeypad" Margin="5">
            <Button Name="DeleteButton" Content="Deletar" Grid.Row="1" Grid.Column="0" Classes="accent-green" Click="DeleteButton_Click" />
            <Button Name="CancelButton" Content="Cancelar" Grid.Row="1" Grid.Column="2" Classes="accent-red" Click="CancelButton_Click" />
        </Grid>
    </StackPanel>
</Window>